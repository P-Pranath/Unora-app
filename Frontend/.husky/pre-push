#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Run ESLint
echo "ğŸ“ Checking ESLint..."
yarn lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix the errors before pushing."
  exit 1
fi

# Run Prettier check
echo "ğŸ¨ Checking Prettier..."
yarn check-format
if [ $? -ne 0 ]; then
  echo "âŒ Prettier check failed. Run 'yarn format' to fix formatting."
  exit 1
fi

# Run TypeScript check
echo "ğŸ“˜ Checking TypeScript..."
yarn typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix type errors before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"

