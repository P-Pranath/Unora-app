APP_ENV=development
APP_PORT=8080
APP_DEBUG=true

# Database (MySQL)
DB_HOST=mysql
DB_PORT=3306
DB_USER=testuser
DB_PASSWORD=testpass
DB_NAME=be_db
DB_SSL_MODE=disable

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Content-Length,Accept-Encoding,X-CSRF-Token,Authorization,accept,origin,Cache-Control,X-Requested-With
CORS_EXPOSED_HEADERS=Content-Length,Content-Type,Authorization
CORS_MAX_AGE=86400

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# API
API_PREFIX=/api/v1
DOCKER_ENV=true

# ==============================================================================
# MinIO Storage Configuration (for file uploads with presigned URLs)
# ==============================================================================
STORAGE_PROVIDER=minio

# MinIO connection settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents
MINIO_PREFIX=uploads
MINIO_REGION=us-east-1
MINIO_USE_SSL=false
MINIO_USE_PATH_STYLE=true

# Public URL for presigned file access (frontend uses this)
# For local development: http://localhost:9000
# For production: https://storage.yourdomain.com
MINIO_PUBLIC_BASE_URL=http://localhost:9000

# Presigned URL expiry configuration (in minutes)
STORAGE_URL_DOWNLOAD_EXPIRY_MINS=60
STORAGE_URL_PREVIEW_EXPIRY_MINS=15
STORAGE_URL_UPLOAD_EXPIRY_MINS=30

# ==============================================================================
# Email (SMTP)
# ==============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=no-reply@example.com
SMTP_USE_TLS=true

# ==============================================================================
# Auth Configuration
# ==============================================================================
# AUTH_SECRET_KEY is used for encrypting/decrypting authentication tokens
# Generate a secure key using: openssl rand -hex 32
AUTH_SECRET_KEY=your-secret-key-here-change-in-production

# JWT settings
JWT_ACCESS_TOKEN_EXPIRY_HOURS=24
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# ==============================================================================
# Cron Configuration
# ==============================================================================
CRON_SCHEDULE=@daily
